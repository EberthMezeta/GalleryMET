<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
      <link rel="stylesheet" href="/styles/home.css">
    <title>Albums</title>
</head>
<body>

    <%- include ('../layout/navbar') %>

    <form action="/create-album" method="post" class="d-flex align-items-center justify-content-center text-white" >
        
        <label for="InputName" class="form-label m-2">Album Name</label>
        <input type="text" name="name" placeholder="Album name" class="form-control  m-2" style="width: 18rem;" id="InputName">
        
        <div  class="form-check  m-2" >
            <input type="checkbox" name="isPrivate" checked  class="form-check-input" id="isPrivate">
            <label for="isPrivate"  class="form-check-label"> Private Album</label>
        </div>
        <input type="submit" value="Create" class="btn btn-primary">
    </form>

    <div class="align-items-center justify-content-center">
        <h1 class="text-white" style="text-align: center;">Album List</h1>
    </div>
    

    <div class="albums d-flex p-3 gap-3">
        <% albums.forEach(album => { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= album.name %></h5>
                  <a href="/albums/<%= album._id %>" class="card-link">Ver Album</a>
                </div>
              </div>
        <% }) %>
    </div>


</body>
</html>